algoritmo "somadorNumerico"
var
   cont, N, S: Inteiro
inicio
      cont <- 1
      S <- 0
      Enquanto (cont <=) faca
               Escreval("Digite o", cont, "o. valor:")
               Leia(N)
               S <- S + N
               cont <- cont + 1
      FimEnquanto
      Escreva("A soma de todos os valores foi", S)
fimalgoritmo
